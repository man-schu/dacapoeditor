{
  "name": "dacapoeditor",
  "productName": "dacapoeditor",
  "version": "1.1.8",
  "description": "DaCapo Editor - ABC Music Editor",
  "main": "docs/index.js",
  "directories": {
        "buildResources": "build"
    },
  "files": [
      "build/**/*"
    ],
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\""
  },
  "keywords": [],
  "author": {
    "name": "man-schu",
    "email": "msori58@gmx.net"
  },
  "license": "GNU General Public License",
  "config": {
    "forge": {
      "packagerConfig": {
         "icon": "docs/images/icons/icon"
              },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "dacapoeditor",
            "setupIcon": "docs/images/icons/icon.ico",
            "iconUrl": "https://raw.githubusercontent.com/man-schu/dacapoeditor/main/images/icons/icon.ico"
          }
        },
        {
          "name": "@electron-forge/maker-dmg",
          "icon": "docs/images/icons/icon.icns",
                   "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "icon": "docs/images/icons/icon.svg",
                    "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "icon": "docs/images/icons/icon.svg",
                    "config": {}
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "man-schu",
              "name": "dacapoeditor",
              "draft": true
            }
          }
        }
      ]
    }
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "electron": ">=22.3.24"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-dmg": "^6.0.0-beta.54",
    "@electron-forge/publisher-github": "^6.0.0-beta.54",
    "electron": "22.3.24"
  }
}
